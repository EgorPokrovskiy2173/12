	СтрКоличество	= ?(Количество <= 0, "", " ПЕРВЫЕ " + Формат(Количество, "ЧГ="));
	
	// Из СКД сформируем требуемый текст запроса с условиями
	СхемаКомпоновки = Справочники.БЗ_НовостиБазыЗнаний.ПолучитьМакет("ВыборкаДанных");
		
