	Направление		= НРег(Направление);
	
	СтрКоличество	= ?(Количество <= 0, "", " ПЕРВЫЕ " + Формат(Количество, "ЧГ="));
	НапрСравнения	= ?(Направление = "вперед", ВидСравненияКомпоновкиДанных.Меньше, ВидСравненияКомпоновкиДанных.Больше);
