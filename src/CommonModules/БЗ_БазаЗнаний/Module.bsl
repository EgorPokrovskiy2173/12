			БЗ_БазаЗнанийКлиентСервер.ДобавитьЭлементОтбора(ГруппаИЛИ_3, "СредняяОценка", Статистика.СредняяОценка, ВидСравненияКомпоновкиДанных.Равно);
			БЗ_БазаЗнанийКлиентСервер.ДобавитьЭлементОтбора(ГруппаИЛИ_3, "Просмотры", Статистика.Просмотры, ВидСравненияКомпоновкиДанных.Равно);
			БЗ_БазаЗнанийКлиентСервер.ДобавитьЭлементОтбора(ГруппаИЛИ_3, "Ссылка", СтатьяСсылка, НапрСравнения);
		ИначеЕсли ВидСтраницы = "recently_added" Тогда
			// Создана >
			ГруппаИЛИ_1 = БЗ_БазаЗнанийКлиентСервер.ДобавитьГруппуОтбора(НастройкаОтбора, ТипГруппыЭлементовОтбораКомпоновкиДанных.ГруппаИли);
			БЗ_БазаЗнанийКлиентСервер.ДобавитьЭлементОтбора(ГруппаИЛИ_1, "Создана", Статистика.Создана, НапрСравнения);
			
			// Создана =, Ссылка >
			ГруппаИЛИ_2 = БЗ_БазаЗнанийКлиентСервер.ДобавитьГруппуОтбора(ГруппаИЛИ_1, ТипГруппыЭлементовОтбораКомпоновкиДанных.ГруппаИли);
			БЗ_БазаЗнанийКлиентСервер.ДобавитьЭлементОтбора(ГруппаИЛИ_2, "Создана", Статистика.Создана, ВидСравненияКомпоновкиДанных.Равно);
			БЗ_БазаЗнанийКлиентСервер.ДобавитьЭлементОтбора(ГруппаИЛИ_2, "Ссылка", СтатьяСсылка, НапрСравнения);
		ИначеЕсли ВидСтраницы = "most_popular" Тогда
